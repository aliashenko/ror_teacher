<ul class = "courses">
  <% @courses.each do |course| %>
    <li><%= course.name %>
      <% if user_signed_in? %>
        <% if @user.courses.include?(course) %>
          <%= link_to 'View course', course_path(course.id), method: :get, class: :assign %>
        <% else %>
          <% if course.is_public? %>
            <%= link_to 'Start course', course_path(course.id), method: :get, class: :assign %>
          <% end %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
